
<title>@Model.PageInfo.PageTitle</title>
<meta http-equiv="content-language" content="ru">
<meta name="description" content="@Model.PageInfo.PageDescription" />
<meta name="keywords" content="@Model.PageInfo.PageKeyWords" />
<meta itemprop="lastReviewed" content="@Model.PageInfo.PageLastmod.ToString("yyyy-MM-dd")" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta http-equiv="cleartype" content="on" />
<meta http-equiv="Cache-Control" content="no-cache" />
<meta name="robots" content="ALL" />
<meta name="revisit-after" content="14 days" />
<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=no, maximum-scale=1.0" />
<meta name="HandheldFriendly" content="True" />
<link rel="canonical" href="@DataConfig.ProjectSite@Model.PageInfo.PageLoc" />
<meta itemprop="image" content="@DataConfig.ProjectSite@Model.PageInfo.ImageFileModel.ImagePath/@Model.PageInfo.ImageFileModel.ImageFileName">

@foreach (var p in Model.IconList)
{
    if (p.IconRel == "shortcut icon")
    {
        <link rel="shortcut icon" type="image/x-icon" href="/images/pageicons/@p.IconPath/@p.IconFileName" />
    }
    else if (p.IconRel == "mask-icon")
    {
        <link rel="mask-icon" type="image/svg+xml" href="/images/pageicons/@p.IconPath/@p.IconFileName" color="#fffff" />
    }
    else
    {
        string widthHeight = @p.IconWidth + "x" + @p.IconHeight;

        <link rel="@p.IconRel" type="@p.IconType" sizes="@widthHeight" href="/images/pageicons/@p.IconPath/@p.IconFileName" />
    }
}

<meta name="msapplication-config" content="/browserconfigs/@Model.PageInfo.BrowserConfig" />
<meta name="application-name" lang="ru" content="@Model.PageInfo.PageTitle" />
<meta name="msapplication-tooltip" content="@Model.PageInfo.PageTitle" />
<meta name="msapplication-TileImage" content="/images/browserconfig/@Model.PageInfo.IconPath/ms-icon-144x144.png" />
<meta name="msapplication-TileColor" content="#ffffff" />
<meta name="theme-color" content="#fffffff" />

<link rel="manifest" href="/manifests/@Model.PageInfo.Manifest" />