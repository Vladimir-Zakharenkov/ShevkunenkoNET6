@if (Model.IsIcon)
{
    <span itemscope itemtype="http://schema.org/ImageObject">

        <meta itemprop="name" content="@Model.ImageItem.ImageCaption" />

        <meta itemprop="caption" content="@Model.ImageItem.ImageCaption" />

        <meta itemprop="description" content="@Model.ImageItem.ImageDescription" />

        <link itemprop="contentUrl" href="@DataConfig.ProjectSite@Model.ImageItem.ImagePath/@Model.ImageItem.IconFileName" />

        <link itemprop="thumbnailUrl" href="@DataConfig.ProjectSite@Model.ImageItem.ImagePath/@Model.ImageItem.IconFileName" />

        <meta itemprop="width" content="@Model.ImageItem.IconWidth px" />

        <meta itemprop="height" content="@Model.ImageItem.IconHeight px" />

        <img itemprop="image" class="@Model.CssClass" src="/@Model.ImageItem.ImagePath/@Model.ImageItem.IconFileName" asp-append-version="true" alt="@Model.ImageItem.ImageAltTitle" title="@Model.ImageItem.ImageAltTitle" />

    </span>
}
else
{
    <span itemscope itemtype="http://schema.org/ImageObject">

        <meta itemprop="name" content="@Model.ImageItem.ImageCaption" />

        <meta itemprop="caption" content="@Model.ImageItem.ImageCaption" />

        <meta itemprop="description" content="@Model.ImageItem.ImageDescription" />

        <link itemprop="contentUrl" href="@DataConfig.ProjectSite@Model.ImageItem.ImagePath/@Model.ImageItem.ImageFileName" />

        <link itemprop="thumbnailUrl" href="@DataConfig.ProjectSite@Model.ImageItem.ImagePath/@Model.ImageItem.ImageFileName" />

        <meta itemprop="width" content="@Model.ImageItem.ImageWidth px" />

        <meta itemprop="height" content="@Model.ImageItem.ImageHeight px" />

        <img itemprop="image" class="@Model.CssClass" src="/@Model.ImageItem.ImagePath/@Model.ImageItem.ImageFileName" asp-append-version="true" alt="@Model.ImageItem.ImageAltTitle" title="@Model.ImageItem.ImageAltTitle" />

    </span>
}